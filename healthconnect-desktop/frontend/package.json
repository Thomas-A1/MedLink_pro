{
  "name": "healthconnect-desktop-frontend",
  "version": "1.0.0",
  "description": "Electron + React desktop client for HealthConnect pharmacies and hospitals.",
  "main": "dist/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:main": "tsc --project tsconfig.main.json",
    "start-main": "npm run build:main && electron dist/main/index.js",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm:dev\" \"npm:start-main\"",
    "electron:build": "npm run build && npm run build:main && electron-builder",
    "lint": "eslint 'src/**/*.{ts,tsx}'"
  },
  "build": {
    "appId": "com.healthconnect.desktop",
    "productName": "MedLink",
    "files": [
      "dist/",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "public/medlink-logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/medlink-logo.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/medlink-logo.png"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "axios": "^1.6.5",
    "dexie": "^3.2.4",
    "electron-log": "^5.0.2",
    "electron-updater": "^6.1.0",
    "leaflet": "^1.9.4",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-query": "^3.39.3",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.21.0",
    "socket.io-client": "^4.7.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
